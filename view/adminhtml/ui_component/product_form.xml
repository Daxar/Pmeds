<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="tingle_pmeds_questions_setup">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">P-Meds questions</item>
                <item name="collapsible" xsi:type="boolean">true</item>
                <item name="sortOrder" xsi:type="number">75</item>
            </item>
        </argument>
<!--   TODO: Move this to modifiers, and render it if product is in 'P-Meds' attribute set only     -->
<!--   https://devdocs.magento.com/guides/v2.3/ui_comp_guide/concepts/ui_comp_modifier_concept.html     -->
        <container name="questions_group">
            <field name="title">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="sortOrder" xsi:type="number">10</item>
                        <item name="dataType" xsi:type="string">string</item>
                        <item name="label" xsi:type="string">Questionnaire intro text</item>
                        <item name="formElement" xsi:type="string">textarea</item>
                        <item name="scopeLabel" xsi:type="string">[STORE VIEW]</item>
                        <!--        TODO: Remove                -->
                        <item name="notice" xsi:type="string" translate="true">Should this field be a required* one ?</item>
                        <item name="validation" xsi:type="array">
                            <item name="required-entry" xsi:type="boolean">true</item>
                        </item>
                    </item>
                </argument>
            </field>
            <field name="answer">
                <argument name="data" xsi:type="array">
                    <item name="options" xsi:type="object">Tingle\Pmeds\Ui\Options\Product\Source</item>
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="label" xsi:type="string" translate="true">Questions</item>
                        <item name="formElement" xsi:type="string">multiselect</item>
                        <item name="scopeLabel" xsi:type="string">[STORE VIEW]</item>
                        <!--        TODO: Remove                -->
                        <item name="notice" xsi:type="string" translate="true">Should this field be a required* one ?</item>
                        <item name="sortOrder" xsi:type="number">20</item>
                    </item>
                </argument>
            </field>
        </container>
    </fieldset>
</form>